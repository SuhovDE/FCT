@page "/imports"

<PageTitle>Imports</PageTitle>

<h1 class="mb-4">Imports</h1>

<div class="row g-3">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Statistical Data Import</h5>
                <p class="card-text">
                    Upload airport statistics to populate comparison baselines for scenarios.
                </p>
                <NavLink class="btn btn-primary mt-auto" href="/imports/statistics">Launch wizard</NavLink>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Flight Schedule Import</h5>
                <p class="card-text">
                    Walk through the step-by-step schedule import workflow including mapping, filters, and comparison review.
                </p>
                <NavLink class="btn btn-outline-primary mt-auto" href="/imports/schedule">Launch wizard</NavLink>
            </div>
        </div>
    </div>
</div>
